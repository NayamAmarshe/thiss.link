{
  "compilerOptions": {
    "module": "NodeNext",
    "rootDir": "src",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "types": ["node"],
    "baseUrl": "./"
  },
  "compileOnSave": true,
  "exclude": ["lib"]
}
